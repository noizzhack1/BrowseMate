{
  "manifest_version": 3,
  "name": "BrowseMate",
  "version": "1.0.0",
  "description": "BrowseMate sidebar chat - quick access chat in Chrome's side panel.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "BrowseMate Chat"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/llm-config.json"],
      "matches": ["<all_urls>"]
    }
  ]
}


