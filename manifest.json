{
  "manifest_version": 3,
  "name": "BrowseMate",
  "version": "1.0.0",
  "description": "BrowseMate sidebar chat - quick access chat in Chrome's side panel.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "BrowseMate Chat",
    "default_icon": {
      "16": "./icons/frame.png",
      "32": "./icons/frame.png",
      "48": "./icons/frame.png",
      "128": "./icons/frame.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/llm-config.json",
        "lib/llm-client.js",
        "lib/action-tools.js",
        "config/*",
        "settings/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}


